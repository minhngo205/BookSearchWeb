@{
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
    ViewBag.Title = "Search";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Web Assignment</title>
    <link href="~/Content/css/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="homePage-header">
        <div class="search-content">
            <div class="logo">
                <a href="Index">
                    <h1>Webmantic</h1>
                    <span>Semantic web search engine</span>
                </a>
            </div>
            <div class="search">
                <div class="search__seacrch-inputwrap">
                    <form action="@Url.Action("searchresults","home")" method="get" class="form">
                        <input class="input-search" type="text" name="id" placeholder="Search...">
                    </form>
                </div>
                <button class="btn">
                    <i class="fa fa-search"></i>
                </button>
            </div>

        </div>
        <p class="text">Created by <a href="https://www.facebook.com/hoangminh.ngo.205/" target="_blank"><strong>Ngô Hoàng Minh</strong></a> as part of my course project at <a href="http://dut.udn.vn/" target="_blank"><strong>Danang University of Science and Technology</strong></a></p>
    </header>

</body>
